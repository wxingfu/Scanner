<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
        <!--必须放在configuration第一个-->
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
    </configSections>
    <log4net>
        <appender name="Console" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <!-- <conversionPattern value="%date  [%thread]  %-5level  %logger  [%ndc]  -  %message%newline" /> -->
                <conversionPattern value="[日志时间] : %date%newline[线程标识] : %thread%newline[日志级别] : %-5level%newline[日志对象] : %logger-[%ndc]%newline[日志内容] : %message%newline%newline" />
            </layout>
        </appender>

        <appender name="INFO_FILE" type="log4net.Appender.RollingFileAppender">
            <file value="logs/scanner/info.log" />
            <appendToFile value="true" />
            <maximumFileSize value="5120KB" />
            <maxSizeRollBackups value="10" />
            <!-- RollingStyle Composite 综合  Size 按大小  Date 按时间 -->
            <RollingStyle value="Date" />

            <layout type="log4net.Layout.PatternLayout">
                <!-- <conversionPattern value="%date  [%thread]  %-5level  %logger  [%ndc]  -  %message%newline" /> -->
                <conversionPattern value="[日志时间] : %date%newline[线程标识] : %thread%newline[日志级别] : %-5level%newline[日志对象] : %logger-[%ndc]%newline[日志内容] : %message%newline%newline" />
            </layout>

            <filter type="log4net.Filter.LevelRangeFilter">
                <levelMin value="INFO" />
                <levelMax value="INFO" />
            </filter>
        </appender>

        <appender name="WARN_FILE" type="log4net.Appender.RollingFileAppender">
            <file value="logs/scanner/warn.log" />
            <appendToFile value="true" />
            <maximumFileSize value="5120KB" />
            <maxSizeRollBackups value="10" />
            <!-- RollingStyle Composite 综合  Size 按大小  Date 按时间 -->
            <RollingStyle value="Date" />

            <layout type="log4net.Layout.PatternLayout">
                <!-- <conversionPattern value="%date  [%thread]  %-5level  %logger  [%ndc]  -  %message%newline" /> -->
                <conversionPattern value="[日志时间] : %date%newline[线程标识] : %thread%newline[日志级别] : %-5level%newline[日志对象] : %logger-[%ndc]%newline[日志内容] : %message%newline%newline" />
            </layout>

            <filter type="log4net.Filter.LevelRangeFilter">
                <levelMin value="WARN" />
                <levelMax value="WARN" />
            </filter>
        </appender>

        <appender name="ERROR_FILE" type="log4net.Appender.RollingFileAppender">
            <file value="logs/scanner/error.log" />
            <appendToFile value="true" />
            <maximumFileSize value="5120KB" />
            <maxSizeRollBackups value="10" />
            <!-- RollingStyle Composite 综合  Size 按大小  Date 按时间 -->
            <RollingStyle value="Date" />

            <layout type="log4net.Layout.PatternLayout">
                <!-- <conversionPattern value="%date  [%thread]  %-5level  %logger  [%ndc]  -  %message%newline" /> -->
                <conversionPattern value="[日志时间] : %date%newline[线程标识] : %thread%newline[日志级别] : %-5level%newline[日志对象] : %logger-[%ndc]%newline[日志内容] : %message%newline%newline" />
            </layout>

            <filter type="log4net.Filter.LevelRangeFilter">
                <levelMin value="ERROR" />
                <levelMax value="ERROR" />
            </filter>
        </appender>


        <root>
            <level value="ALL" />
            <appender-ref ref="Console" />
            <appender-ref ref="INFO_FILE" />
            <appender-ref ref="WARN_FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </log4net>
	
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.2" />
    </startup>
</configuration>